<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listPeserta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/fotoPeserta"
            android:layout_width="67dp"
            android:layout_height="61dp"
            android:layout_marginStart="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.545"
            tools:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama"
            android:textColor="#000000"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/fotoPeserta"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/namaPeserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text=": Rizki Juni Darmawan"
            android:textColor="#000000"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/textView47"
            card_view:layout_constraintTop_toTopOf="@+id/textView47" />

        <TextView
            android:id="@+id/nimPeserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text=": 2011527002"
            android:textColor="#000000"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/textView49"
            card_view:layout_constraintTop_toTopOf="@+id/textView49" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppins_bold"
            android:text="NIM"
            android:textColor="#000000"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/fotoPeserta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>